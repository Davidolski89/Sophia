@model UserSurveyOverview

@{
    ViewData["Title"] = "Surveys";
}

@if (Model.Surveys.Count < 1)
{
    <h4 class="text-center">No surveys active.</h4>
}
<div class="row">
    @if (Model.Surveys.Count > 0)
    {
        @foreach (Survey survey in Model.Surveys)
        {
            if (survey.Active)
            {
                <div class="shadow card col-sm-5 ml-sm-5 mb-3 pt-3">
                    <div class="text-white bg-dark card-header">@survey.Title</div>
                    <div class="card-body d-flex flex-column align-items-start">
                        <p class="card-text">@survey.Description</p>
                        <p class="mt-auto">Questions: @survey.Questions.Count</p>
                        <a class="mt-auto btn btn-primary " asp-action="TakeSurvey" asp-route-id="@survey.SurveyId">Take Survey</a>
                    </div>
                </div>
            }
        }
    }

</div>