@model SurveyCreationViewModel
@{
    <h2>Create Survey</h2>
    <form method="post" asp-action="CreateSurvey">
        <div class="form-group">
            <label asp-for="@Model.CurrentSurvey.Title"></label>
            <textarea rows="1" class="form-control" asp-for="@Model.CurrentSurvey.Title"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="@Model.CurrentSurvey.Description"></label>
            <textarea rows="3" class="form-control" asp-for="@Model.CurrentSurvey.Description"></textarea>
        </div>
        <div class="form-check row mb-3">
            <label class="form-check-label col-2" asp-for="@Model.CurrentSurvey.Active"></label>
            <input class="form-check-input" asp-for="@Model.CurrentSurvey.Active" type="checkbox" />
        </div>
        <button class="btn btn-primary mb-4" type="submit">Create Survey</button>
    </form>
    <div asp-validation-summary="All"></div>
}
